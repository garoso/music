<div class="container mt-3">
  <div class="row">
    <div class="col-sm-8">
      <h3><%= @artist.name.upcase %></h3>
      <hr>
      <% @artist.albums.each do |album|%>
        <div class="col-sm-3 d-inline-block">
          <div class="card p-2 m-1 mr-1">
            <img class="card-img-top" style="height: 100px;" src="<%= album.image_url%>">
            <div class="card-body p-1">
              <div class="card-title text-center"><%= album.name.capitalize %></div>
              <div class="card-text"><%= album.released_at %></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-sm-4">
      <img src="<%= @artist.image_url %>" class="img-thumbnail">
    </div>
  </div>
</div>
